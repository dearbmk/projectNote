<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true" scanPeriod="30 seconds"> <!-- config checking time period -->
    <property name="moduleId" value="projectnote"/> <!-- project folder name -->
    <property name="type" value="projectnote"/> <!-- elements of logfile name -->
    <property name="logback" value="logback" /> <!-- directory for log -->
    <property name="logdir" value="C:\Workspace\LogFiles" />

    <!-- Appenders -->
    <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>DEBUG</level>
        </filter>
        <encoder>
            <pattern>[%d{yyyy-MM-dd HH:mm:ss.SSS}] [%-5level] [%thread] %logger{30} %msg%n</pattern>
        </encoder>
    </appender>

    <root level="INFO">
        <appender-ref ref="console" />
    </root>

</configuration>
